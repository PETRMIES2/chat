<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/create_account_form"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="@dimen/margin_extra_large"
        android:paddingRight="@dimen/margin_extra_large"
        tools:context="com.sopeapp.login.CreateAccountActivity">


        <ImageView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:paddingTop="10dp"
            android:src="@drawable/sope_icon" />

        <LinearLayout
            android:id="@+id/create_account_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_marginTop="15dp"
            android:elevation="10dp"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@drawable/login_top_bar"/>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/margin_extra_large"
                android:paddingTop="@dimen/margin_extra_large"
                android:paddingRight="@dimen/margin_extra_large"
                android:layout_marginBottom="@dimen/margin_extra_large"
                >

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/login_prompt_username"
                    android:maxLength="20"
                    android:inputType="textEmailAddress"
                    android:maxLines="1" />

            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/create_account_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/login_already_have_account_shape"
                android:text="@string/login_action_register"
                android:textColor="@color/desaturated_dark_blue"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/margin_extra_large"
                android:layout_marginRight="@dimen/margin_extra_large"
                />
            <Button
                android:id="@+id/login_with_old_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/login_button_shape"
                android:text="@string/login_already_have_account"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/margin_extra_large"
                android:layout_marginTop="@dimen/margin_extra_large"
                android:layout_marginLeft="@dimen/margin_extra_large"
                android:layout_marginRight="@dimen/margin_extra_large"
                />


        </LinearLayout>
    </LinearLayout>
</ScrollView>
